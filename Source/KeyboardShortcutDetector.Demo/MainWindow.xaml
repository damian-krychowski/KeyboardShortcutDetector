<Window x:Class="KeyboardShortcutDetector.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeyboardShortcutDetector.Demo"
        mc:Ignorable="d"
        Title="Keyboard shortcut detector DEMO" Height="100" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Grid.Row="0">Use LeftCtrl + Digit or RightCtrl + Letter to test the application</Label>
        <TextBox x:Name="Result"  Grid.Row="1" TextAlignment="Center"></TextBox>
    </Grid>
</Window>
